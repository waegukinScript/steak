doctype html
html(lang='en')
  head
     title Jade
     style.
       table{
       border-collapse: collapse;
       margin-top: 30px;
       margin-left: 70px;
       margin-right: 30px;
       }
       .heading{
       font-weight: bold;
       width: 150px;
       }
       .value{
       width: 500px;
       }
   body
     div(style='margin-top: 50px')
       h1(style='margin-left: 70px;') Events
       hr(style=' margin-top:0px; height:10px;border:none;color:#333;background-color:#333; margin-left: 70px; margin-right: 73px;')
       each event, index in eventsReceived
           p(style='margin-left: 70px;')= index+1
            table(border='1')
                tbody
                    tr
                        td.heading Event Name
                        td.value= event.eventName
                    tr
                        td.heading Event Date
                        td.value= event.eventDate
                    tr
                        td.heading Event Time
                        td.value= event.eventTime
                    tr
                        td.heading Guest
                        td.value= event.guest
                    tr
                        td.heading Budget
                        td.value= event.budget
                    tr
                        td.heading Contact Name
                        td.value= event.contactName
                    tr
                        td.heading Email Address
                        td.value= event.emailAddress

