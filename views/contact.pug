    link(rel='stylesheet', href='css/style.css')
  body
    #site-wrap.js-animsition.animsition(data-animsition-in-class='fade-in', data-animsition-out-class='fade-out')
      nav.templateux-menu
        .templateux-menu-inner
          ul
            li
              a.animsition-link(href='index.html') Home
            li
              a(href='about.html') About
            li
              a.animsition-link(href='menu.html') Menu
            li
              a.animsition-link(href='gallery.html') Gallery
            li.active
              a.animsition-link(href='contact.html') Contact
            li.cta
              a.animsition-link.py-2.px-4(href='reservation.html') Reserve Now
      header.templateux-header
        .container-fluid
          .row
            .col-6.templateux-logo
              h1
                a.animsition-link(href='index.html') Steak
            .col-6.text-right
              button.d-block.hamburger.hamburger--spin.templateux-toggle.templateux-toggle-light.ml-auto.templateux-toggle-menu(data-toggle='collapse', data-target='#mobile-menu', aria-controls='mobile-menu', aria-expanded='false', aria-label='Toggle navigation')
                span.hamburger-box
                  span.hamburger-inner
              // .templateux-toggle
      .cover-parallax-1.overlay-1.padding(data-scrollax-parent='true')
        .cover(data-scrollax="properties: { translateY: '30%' }")
          img(src='images/img_isotope_2.jpg')
        .container
          .row.align-items-center
            .col-md-12.col-lg-12.text-center(data-aos='fade')
              h3.heading.mb-5 Contact Us
        a.templateux-mouse.js-smoothscroll(href='#next-section')
          .scroll
